generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique
  moodEntries   MoodEntry[]
  groupMembers  GroupMember[]
  posts         Post[]
  reminders     Reminder[]
}

model Group {
  id          String    @id @default(uuid())
  name        String
  inviteCode  String    @unique
  members     GroupMember[]
  posts       Post[]
}

model GroupMember {
  id        String   @id @default(uuid())
  userId    String
  groupId   String
  joinedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

model MoodEntry {
  id         String   @id @default(uuid())
  userId     String
  date       String   // Format: YYYY-MM-DD
  moodLevel  Int      // 1 (Very Sad) to 5 (Very Happy)
  note       String?  // Optional private diary note
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, date]) // One entry per day
}

model Post {
  id        String   @id @default(uuid())
  userId    String
  groupId   String
  content   String
  type      String   // 'text' or 'fitness'
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
}

model Reminder {
  id             String      @id @default(uuid())
  userId         String
  title          String
  category       String      // 'medication', 'supplement', 'appointment', 'water', 'exercise'
  description    String?
  time           String      // Format: 'HH:MM'

  // Repeat Pattern
  repeatType     String      @default("none") // 'none', 'daily', 'specific-days', 'weekly'
  repeatDays     String?     // JSON array: [0=Sun, 1=Mon, ... 6=Sat]

  // Tracking
  doses          Dose[]
  completedCount Int         @default(0)
  missedCount    Int         @default(0)
  lastTakenAt    DateTime?
  nextOccurrence DateTime?

  // Meta
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user           User        @relation(fields: [userId], references: [id])
}

model Dose {
  id        String    @id @default(uuid())
  reminderId String
  date      String    // Format: YYYY-MM-DD
  status    String    @default("pending") // 'pending', 'taken', 'skipped', 'snoozed'
  takenAt   DateTime?
  snoozedUntil DateTime?

  reminder  Reminder  @relation(fields: [reminderId], references: [id], onDelete: Cascade)

  @@unique([reminderId, date])
}
